<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.55" />

    <EditText
        android:id="@+id/etDirector"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMovies"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etMovie"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etDirector"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bSave"
        android:text="Save Movie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toTopOf="@+id/etDirector"
        app:layout_constraintBottom_toBottomOf="@id/etMovie"
        app:layout_constraintStart_toEndOf="@id/etMovie"/>

</androidx.constraintlayout.widget.ConstraintLayout>